<h1><%= @recipe.recipe_name %></h1>

<h2>Ingredients</h2>

<% ingredients = @recipe.ingredients %>

<% for ingredient in ingredients %>
<p><%= ingredient.name %></p> 
<% end %>

<form action='/shopping_list/<%= @recipe.id %>' method="post" onsubmit="return confirm('Recipe ingredients have been added to shopping list!')">
  <input class="btn" type="submit" value="Add Ingredients to Shopping List">
  </form>


<h2>Method</h2>
<p><%= @recipe.method %></p>

<p>
<form action="/recipes/<%= @recipe.id %>/edit" method="get">
  <input class="btn"  type="submit" value="Edit Recipe"/> 
 </form>

 <form action="/recipes/<%= @recipe.id %>/delete" method="post">
  <input class="btn"  type="submit" value="Delete Recipe"/> 
 </form>
</p>