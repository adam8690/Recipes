<h2>Recipes</h2>


<% for recipe in @recipes %>
<hr>
<p><a class="recipe" href="/recipes/<%= recipe.id %>">
  <%= recipe.recipe_name %></a>

<form action="/recipes/<%= recipe.id %>/edit" method="get">
  <input class="btn-orange"  type="submit" value="Edit Recipe"/> 
 </form>

 <form action="/recipes/<%= recipe.id %>/delete" method="post">
  <input class="btn-red"  type="submit" value="Delete Recipe"/> 
 </form>


</p>
<% end %>
